#:kivy 1.11.1

#### Layout
<Container>
    orientation: 'horizontal'
    spacing: 10

# Linke Spalte
    BoxLayout:
        orientation: "vertical"
        Label:
            text:
                "Select"

        Button:
            text: "CH 1"
            on_press: root.btn1_press()
            on_release: root.btn1_release()

        Button:
            text: "CH 2"
            on_press: root.btn2_press()
            on_release: root.btn2_release()

# mein Weidget
    MotionDisplay:
        pos_ind_ch1: pos_ind_ch1
        pos_ind_ch2: pos_ind_ch2
        pos_ind_ch3: pos_ind_ch3
        pos_ind_ch4: pos_ind_ch4

        size_hint: None, None # ich muss erst hint auschalten samit size geht
        size: root.height, root.height

        PositionIndicator:
            id: pos_ind_ch1
            center: self.parent.center
        PositionIndicator:
            id: pos_ind_ch2
            center: self.parent.center
        PositionIndicator:
            id: pos_ind_ch3
            center: self.parent.center
        PositionIndicator:
            id: pos_ind_ch4
            center: self.parent.center


# Rechte Spalte
    BoxLayout:
        orientation: "vertical"

        Label:
            text:
                "Select"

        Button:
            text: "CH 3"
            on_press: root.btn3_press()
            on_release: root.btn3_release()

        Button:
            text: "CH 4"
            on_press: root.btn4_press()
            on_release: root.btn4_release()


#### Wedgets
<MotionDisplay>
    canvas:

        Rectangle:
            pos: self.pos
            size: self.size
            source: "Pix/MoverMeterBG.png"


<PositionIndicator>
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
